<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_round"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight = "1">
        <ImageView
        android:id="@+id/char_img"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/arm_img" />

        <ImageView
            android:id="@+id/char_change_img"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/arm_change_img" />
    </FrameLayout>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
        android:layout_weight = "2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/arm_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="팔"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/legs_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="다리"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/abs_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="복근"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/shoulder_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="어깨"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/chest_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="가슴"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/back_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="등"
            android:textSize="20dp"
            android:textStyle="bold"/>
    </LinearLayout>>

</LinearLayout>